<!DOCTYPE html>
<html>
  <head>
    <meta charset='utf-8'>
    <title>Favorite Places</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  </head>
  <body>
    <div class="jumbotron text-center">
      <h1>List of Favorite Cities</h1>
    </div>
    <div class="well text-center">
      <h3>Current List of Favorite Cities:</h3>
      @foreach(var place in Model)
      {
      <div class="row">
        <div class="col-sm-4">
        </div>
        <div class="col-sm-4">
          <ul style="list-style: none;">
            <li>@place.GetCity()</li>
            <li>Length of Stay: @place.GetStayTime() days</li>
            <li><a href="@place.GetImage()">Link to picture</a></li>
          </ul>
        </div>
        <div class="col-sm-4">
        </div>
      </div>
      }
    </div>
    <div class="well text-center">
      <h4><a href="/places/new">Add Your Favorite City!</a></h4><br>
      <form action='/places/clear' method="post">
        <button type='submit' class='btn btn-success'>Clear List</button>
      </form>
    </div>
  </body>
</html>
